@{
    Layout = "_AdminLayout";

}
@model UpdateEmployeeDto
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h1>Personel Güncelleme Sayfası</h1>
                <div class="table-responsive">
                    <form action="/Employee/UpdateEmployee" method="post">
                        <input type="hidden" asp-for="EmployeeID"/>
                        <label>Personel Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <br />
                        <label>Personel Unvanı</label>
                        <input asp-for="Title" class="form-control" />
                        <br />
                        <label>Personel Mail Adresi</label>
                        <input asp-for="Mail" class="form-control" />
                        <br />
                        <label>Personel Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <br />
                        <label>Personel Fotoğraf</label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <br />
                        <button type="submit" class="btn btn-success">Personeli Kaydet</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
