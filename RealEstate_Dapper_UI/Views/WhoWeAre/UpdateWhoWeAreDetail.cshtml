@{

    Layout = "_AdminLayout";
}
@model UpdateWhoWeAreDetailDto

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h1>Yeni Biz Kimiz Ekleme Sayfası</h1>
                <div class="table-responsive">
                    <form action="/WhoWeAre/UpdateWhoWeAreDetail" method="post">
                        <input type="hidden" asp-for="WhoWeAreDetailID" />
                        <label>Başlık</label>
                        <input asp-for="Title" class="form-control" />
                        <br />
                        <label>Alt Başlık</label>
                        <input asp-for="Subtitle" class="form-control" />
                        <br />
                        <label>Açıklama 1</label>
                        <textarea asp-for="Description1" class="form-control" /></textarea>
                        
                        <br />
                        <label>Açıklama 2</label>
                        <textarea asp-for="Description2" class="form-control" /></textarea>
                        
                        <br />


                        <button type="submit" class="btn btn-success">Biz Kimiz Kaydet</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
